<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.lab1.acoesdiarias.LembreteActivity">


    <TextView
        android:id="@+id/TxtLembreteTelaLembrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digite seu Lembrete: "
        android:textStyle="bold"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/edtLembrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"/>
    <TextView
        android:id="@+id/TxtLocalTelaLembrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Local: "
        android:textStyle="bold"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/edtLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"/>
    <TextView
        android:id="@+id/TxtHorarioTelaLembrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horario: "
        android:textStyle="bold"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/edtHorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"/>
    <Button
        android:id="@+id/botaoSalvarLembrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar Lembrete"
        android:textStyle="italic"
        android:textSize="20dp"/>




</LinearLayout>
